    <script>
      // JavaScript for the mobile menu toggle
      const btn = document.querySelector("[data-collapse-toggle='mobile-menu-2']");
      const menu = document.getElementById("mobile-menu-2");
      console.log('item ', document.getElementById("loginPopup").length)

      // Function to show the login popup
      function showLoginPopup() {
        document.getElementById("loginPopup").removeAttribute("hidden");
      }

      // Function to hide the login popup
      function hideLoginPopup() {
        document.getElementById("loginPopup").setAttribute("hidden", true);
      }

      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        menu.classList.toggle('flex');
        // Function to show the sign up popup
        function showSignupPopup() {
          document.getElementById("signupPopup").classList.remove("hidden");
        }

        // Function to hide the sign up popup
        function hideSignupPopup() {
          document.getElementById("signupPopup").classList.add("hidden");
        }

        // Event listener for the Sign Up button
        document.getElementById("signupButton").addEventListener("click", showSignupPopup);

        // Event listener for the Close button in the sign up popup
        document.getElementById("signupCloseButton").addEventListener("click", hideSignupPopup);

      });
    </script>

